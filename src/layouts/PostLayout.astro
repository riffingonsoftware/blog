---
import type {PostSchema} from "../content/posts/config";
import BaseLayout from "./BaseLayout.astro";
import Comments from "../components/Comments";
import {Image} from "astro:assets";

export interface Props extends PostSchema{}

const {
    author, title, description, pubDate, updatedDate, heroImage, heroImageAlt, tags,
} = Astro.props;
---

<BaseLayout author={author} title={title} description={description} image={heroImage} pubDate={pubDate}>
  <main class="md:flex md:justify-center">
    <article class="prose prose-lg max-w-[750px] prose-img:mx-auto">
      {
        heroImage && (
          <Image
            background="rgba(0,0,0,0)"
            width={500}
            height={250}
            fit="contain"
            format="webp"
            src={heroImage}
            alt={heroImageAlt ?? title}
            class="max-w-full rounded-lg"
            transition:name={heroImage} />
        )
      }
      <h1 class="title my-2 text-4xl font-bold" transition:name={title}>{title}</h1>
      {pubDate && <time>{pubDate}</time>}
      {
        updatedDate && (
          <div>
              {" "}
            Last updated on <time>{updatedDate}</time>{" "}
          </div>
        )
      }
      <div class="divider my-2"></div>
      <slot/>
    </article>
  </main>
  {
    tags && (
      <div class="tags" style="margin-top: 2em;">
        Tags:
        {tags.map((tag) => (
          <a href={`/posts/${tag}/1`}>
              <div
                class="badge badge-outline ease-in-out hover:scale-[110%] hover:shadow-xl transition"
                style="margin-right: 0.5em;"
              >
                  {tag}
              </div>
          </a>
        ))}
      </div>
    )
  }
  <Comments client:visible/>
</BaseLayout>
