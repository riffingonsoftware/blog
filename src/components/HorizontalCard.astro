---
const {pubDate, title, img, imgAlt, desc, url, tags, target = '_blank'} = Astro.props;
import {Image} from "astro:assets";
---

<div class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]">
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      <div class="w-1/2">
          {img && (
            <Image alt={imgAlt} src={img} height={104.5} width={200} format="webp"
                   class="max-w-full md:max-w-[15rem] rounded-lg" transition:name={img}/>)}
      </div>
      <div class="grow w-full">
        <h1 class="text-xl font-bold" transition:name={title}>
            {title}
        </h1>
        <p class="py-1 text-1xl">{desc}</p>
      </div>
      <div>
          {pubDate}
      </div>
    </div>
  </a>
  <div class="card-actions justify-end">
      {tags && tags.map((tag: string) => <a href={`/posts/${tag}/1`}>
        <div
          class="badge badge-outline rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[105%]">{tag}</div>
      </a>)}
  </div>
</div>
